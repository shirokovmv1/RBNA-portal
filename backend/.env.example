# Django Settings
# Скопируйте этот файл в .env и заполните значения
# Для production ОБЯЗАТЕЛЬНО измените SECRET_KEY!

# Секретный ключ Django (обязательно измените для production!)
# Сгенерируйте новый ключ: python manage.py shell
# from django.core.management.utils import get_random_secret_key
# print(get_random_secret_key())
SECRET_KEY=django-insecure-dev-key-change-in-production

# Режим отладки (False для production)
DEBUG=True

# Разрешенные хосты (через запятую)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS разрешенные источники (через запятую)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

